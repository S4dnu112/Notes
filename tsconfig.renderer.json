{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist/renderer",
    "rootDir": "./renderer",
    "moduleResolution": "bundler",
    "noEmit": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "renderer/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
