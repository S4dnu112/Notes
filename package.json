{
  "name": "teximg-editor",
  "version": "1.0.0",
  "description": "High-performance text editor for .txti files (zip containers with text and images)",
  "main": "dist/main/main.js",
  "scripts": {
    "clean": "rm -rf dist/",
    "copy:assets": "cp src/renderer/index.html src/renderer/style.css dist/renderer/",
    "build": "npm run clean && tsc && tsc -p tsconfig.renderer.json && npm run copy:assets",
    "build:main": "tsc",
    "build:renderer": "tsc -p tsconfig.renderer.json && npm run copy:assets",
    "run": "electron .",
    "start": "npm run build && electron .",
    "test": "jest --testPathIgnorePatterns='/e2e/'",
    "test:unit": "jest __tests__/unit __tests__/lib __tests__/renderer",
    "test:integration": "jest __tests__/integration --testPathIgnorePatterns='/e2e/'",
    "test:component": "jest __tests__/component --testEnvironment=jsdom",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e",
    "test:watch": "jest --watch --testPathIgnorePatterns='/e2e/'",
    "test:coverage": "jest --coverage --testPathIgnorePatterns='/e2e/'"
  },
  "keywords": [
    "electron",
    "text-editor",
    "txti"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@playwright/test": "^1.58.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/adm-zip": "^0.5.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.1.0",
    "@types/uuid": "^10.0.0",
    "babel-jest": "^30.2.0",
    "electron": "^28.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.4.0",
    "playwright": "^1.58.1",
    "pngjs": "^7.0.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "uuid": "^9.0.0"
  }
}
